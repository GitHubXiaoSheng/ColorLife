            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content" /></LinearLayout>-->
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_zhuanfa_recommend"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/zhuanfa"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_zhuangfa_recommend"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp" /></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_comment_recommend"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/pinglun"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_comment_recommend"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_like_recommend"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/zan1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_like_recommend"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              /></LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:background="#ccc"/>
</LinearLayout>