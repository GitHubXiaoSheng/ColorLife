<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragmy_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e1fff3"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/fragmy_head_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragmy_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mios"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fragmy_myhome_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的主页"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fragmy_grade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.8" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragmy_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_head"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/fragmy_seting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragmy_head_img"
            android:layout_alignBottom="@+id/fragmy_head_left_layout"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:text="设置 >" />

        <RelativeLayout
            android:id="@+id/fragmy_head_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmy_head_left_layout"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragmy_head_follow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注：16"
                />

            <TextView
                android:id="@+id/fragmy_head_fans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="粉丝：1632"
                android:layout_marginLeft="150dp"/>

            <TextView
                android:id="@+id/fragmy_head_fabulous_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="赞：3695" />

        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/fragmy_mall_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商城"
        android:textSize="25sp"
        android:textColor="#fff"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/fragmy_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="#000000"
        app:tabGravity="fill"
        app:tabMode="fixed"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/fragmy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

