<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e1fff3">

        <RelativeLayout
            android:id="@+id/fragmy_head_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/fragmy_back"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/fragmy_head_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragmy_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mios"
                    android:textColor="@color/text_gray"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/fragmy_grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Lv.8" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragmy_head_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/default_head"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragmy_head_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmy_head_left_layout"
            android:padding="10dp"
            android:background="@drawable/zl_boder_tb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragmy_head_follow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="关注：16"
                />

            <TextView
                android:id="@+id/fragmy_head_fans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:gravity="center"
                android:text="粉丝：1632"
                android:layout_marginLeft="150dp"/>

            <TextView
                android:id="@+id/fragmy_head_fabulous_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_gray"
                android:layout_marginRight="10dp"
                android:text="赞：3695" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragmy_item1_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item1_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_shop"/>
            <TextView
                android:id="@+id/fragmy_item1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="艺术走廊"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item1_img"/>
            <ImageView
                android:id="@+id/fragmy_item1_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item2_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item2_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_ring"/>
            <TextView
                android:id="@+id/fragmy_item2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="艺术圈"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item2_img"/>
            <ImageView
                android:id="@+id/fragmy_item2_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item3_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item3_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_collection"/>
            <TextView
                android:id="@+id/fragmy_item3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="藏品"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item3_img"/>
            <ImageView
                android:id="@+id/fragmy_item3_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item4_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item4_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_art"/>
            <TextView
                android:id="@+id/fragmy_item4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="我的艺术"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item4_img"/>
            <ImageView
                android:id="@+id/fragmy_item4_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item5_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item5_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_upload"/>
            <TextView
                android:id="@+id/fragmy_item5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="上传作品"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item5_img"/>
            <ImageView
                android:id="@+id/fragmy_item5_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item6_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item6_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_help"/>
            <TextView
                android:id="@+id/fragmy_item6_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="帮助和反馈"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item6_img"/>
            <ImageView
                android:id="@+id/fragmy_item6_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragmy_item7_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zl_my_item_height"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:background="@drawable/zl_boder_tb">
            <ImageView
                android:id="@+id/fragmy_item7_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_seting"/>
            <TextView
                android:id="@+id/fragmy_item7_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23sp"
                android:text="设置"
                android:textColor="@color/text_gray"
                android:layout_toRightOf="@+id/fragmy_item7_img"/>
            <ImageView
                android:id="@+id/fragmy_item7_forward_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/zl_forward"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>