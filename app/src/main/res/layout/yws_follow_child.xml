<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="left"
            android:id="@+id/image_header"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_gravity="right|center"
                android:id="@+id/text_down"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/jiantouxia"
                android:layout_margin="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:id="@+id/text_content"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" /></LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_zhuanfa"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/zhuanfa"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/text_zhuangfa"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="转发"/></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
               android:id="@+id/image_comment"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/pinglun"/>
            <TextView
                android:layout_marginLeft="10dp"
             android:id="@+id/text_comment"
                android:text="评论"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_like"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/zan1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text_like"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:text="赞"/></LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:background="#ccc"/>
</LinearLayout>